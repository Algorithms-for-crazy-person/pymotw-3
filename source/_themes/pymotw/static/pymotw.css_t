/* -*- mode: css -*- */

.content {
	padding: 0 1em;
}

.pure-menu, .pure-menu-open, .pure-menu-horizontal {
	border-bottom: 1px solid #dddddd !important;
}

.sidebar_wrapper {
	margin: 0 0.5em;
}

.content {
	margin: 0 0.25em;
}

/* Remove the default yellow background from highlighted source code
   and output.
 */
.highlight {
	background-color: #ffffff;
}

/* Emphasize code blocks with a line down the left side. */
pre {
	margin-left: 2em;
	margin-right: 2em;
    border-left: 5px solid #DDDDDD;		    
	padding: 0.25em 0.5em;
	font-size: 80%;
}

/* The links associated with the headers should be invisible unless
   the mouse is over them.
 */
a.headerlink {
    visibility: hidden;
    color: #c60f0f;
    font-size: 0.8em;
    padding: 0 4px 0 4px;
    text-decoration: none;
}
h1:hover > a.headerlink,
h2:hover > a.headerlink,
h3:hover > a.headerlink,
h4:hover > a.headerlink,
h5:hover > a.headerlink,
h6:hover > a.headerlink,
dt:hover > a.headerlink {
    visibility: visible;
}
a.headerlink:hover {
    background-color: #c60f0f;
    color: white;
}

/* Show admonitions with some highlighting. */
div.admonition {
	margin: 1em;
	padding: 0 1em;
	border-radius: 4px;
	padding: 0.5em;
}

div.admonition p.admonition-title {
	font-size: 120%;
	margin-top: 0;
	margin-bottom: 0.5em;
}

/* seealso blocks typically have lists */
div.admonition dl {
    padding: 0 1em;
	margin-top: 0;
	margin-bottom: 0;
}
div.admonition dt {
    font-weight: bold;
}

div.seealso {
	background: rgba(66, 184, 221, 0.5);  /* light blue, semi-transparent */
}

div.seealso p.admonition-title {
	color: white;
    font-style: italic;
}

div.warning {
	background: rgba(202, 60, 60, 0.5);  /* maroon, semi-transparent */
}

div.warning p.admonition-title {
	color: black;
	font-weight: bold;
}

div.sidebar {
	margin-top: 1em;
#sidebar-book {
	text-align: center;
}